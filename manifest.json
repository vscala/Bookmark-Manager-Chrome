{
    "name": "Bookmarking Chrome Extension",
    "version": "0.1.0",
    "description": "Bookmark opened tabs for later use",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["storage", "tabs"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/bookmark_icon16.png",
            "32": "icons/bookmark_icon32.png",
            "48": "icons/bookmark_icon48.png",
            "128": "icons/bookmark_icon128.png"
        }
    },
    "icons": {
        "16": "icons/bookmark_icon16.png",
        "32": "icons/bookmark_icon32.png",
        "48": "icons/bookmark_icon48.png",
        "128": "icons/bookmark_icon128.png"
    }
}